.panel.panel-default
  .panel-heading
    h3 Log in
  .panel-body
    .row
      .col-xs-3
        form(role='form', name='loginForm', novalidate)
          .form-group
            label(for='email') Email
            input(type='email', name='email', required, ng-model='user.email')
          .form-group
            label(for='password') Password
            input(type='password',ng-minlength='3', name='email', required, ng-model='user.password')
        button.btn.btn-primary(ng-show='loginForm.$valid', ng-click='login()') Log In
      .col-xs-9
